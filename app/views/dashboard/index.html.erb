<h1>Dashboard</h1>


<% @tasks.each do |t| %>

  <div class="text">
     <span><%=t.name %></span>
  </div>


  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

    <div class="box-part text-center">

      <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>

      <div class="title">
        <h3><%= link_to t.name, t, {:class => "btn-link"}%></h3>
      </div>

      <div class="text">
        <span><%=t.created_by.email %></span>
      </div>

      <div class="text">
        <span><%=t.priority %></span>
      </div>


      <%= link_to "Edit", "tasks/#{t.id}/edit", {:style => "border-bottom:2px solid #0062cc", :class => "btn-link"}%> |
      <%= link_to "Delete", t, {:style => "border-bottom:2px solid #cc0000; color: #cc0000",  method: :delete, data: { confirm: "Are you sure you want to delete this task?" } }%>

    </div>
  </div>

<% end %>