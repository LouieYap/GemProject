<h1>Projects</h1>


<%= link_to "Create Project", {action: "new"}, {:class => "btn btn-success"}%>

<div class="box">
  <div class="container">
    <div class="row">

      <% @projects.each do |p| %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

        <div class="box-part text-center">

          <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>

          <div class="title">
            <h3><%= link_to p.name, p, {:class => "btn-link"}%></h3>
          </div>

          <div class="text">
            <span><%=p.description %></span>
          </div>


          <%= link_to "Edit", "projects/#{p.id}/edit", {:style => "border-bottom:2px solid #0062cc", :class => "btn-link"}%> |
          <%= link_to "Delete", p, {:style => "border-bottom:2px solid #cc0000; color: #cc0000",  method: :delete, data: { confirm: "Are you sure you want to delete this project?" } }%>

        </div>
      </div>
      <% end %>


    </div>
  </div>
</div>