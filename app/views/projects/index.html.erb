<h1>Projects</h1>


<%= link_to "Create Project", {action: "new"}, {:class => "btn btn-success"}%>

<div class="box">
  <div class="container">
    <div class="row">

      <% @projects.each do |p| %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

        <div class="box-part text-center">

          <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>

          <div class="title">
            <h4><%=p.name %></h4>
          </div>

          <div class="text">
            <span><%=p.description %></span>
          </div>

          <a href="#" style="border-bottom:2px solid #0062cc; color: #0062cc">Details</a> | <a href="#" style="border-bottom:2px solid red; color: red">Delete</a>

        </div>
      </div>
      <% end %>


    </div>
  </div>
</div>