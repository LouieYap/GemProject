
<% tasks.each do |t| %>
  <div class="well well-sm">

    <h4><b><%=t.name %></b></h4>
    <% if defined?(dashboard) && !dashboard %>
      <b>Assigned To: </b>
      <% if t.assigned_to.present? %>
        <%= t.assigned_to.email%>
      <% end %>
      <br>
    <% end %>

    <b>Created By: </b><%=t.created_by.email %> <br>
    <b>Priority: </b><%=t.priority.capitalize %>

    <% if t.assigned_to_id == current_user.id || admin_user? %>
      <%= link_to "Edit", "tasks/#{t.id}/edit", {:style => "border-bottom:2px solid #0062cc", :class => "btn-link"}%> |
      <%= link_to "Delete", t, {:style => "border-bottom:2px solid #cc0000; color: #cc0000",  method: :delete, data: { confirm: "Are you sure you want to delete this task?" } }%>
      <% end %>
  </div>



<% end %>